{
    "name": "liplum/flarum-sync-profile",
    "description": "Manage Sync from External Identity Providers",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/askvortsov1/flarum-sync-profile/issues",
        "source": "https://github.com/askvortsov1/flarum-sync-profile",
        "forum": "https://discuss.flarum.org/d/22759-flarum-sync-profile"
    },
    "require": {
        "flarum/core": "^1.2"
    },
    "authors": [
        {
            "name": "Liplum",
            "homepage": "https://liplum.net/",
            "email": "Li_plum@outlook.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Liplum\\SyncProfile\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Sync Profile",
            "category": "authentication",
            "icon": {
                "name": "fas fa-sync",
                "backgroundColor": "#b4333f",
                "color": "#fff"
            }
        }
    }
